{
    "name": "dovuofficial/guardian-php-sdk",
    "description": "A PHP SDK to work with The Guardian",
    "keywords": [
        "guardian-php-sdk"
    ],
    "homepage": "https://github.com/dovuofficial/guardian-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathan Wood",
            "email": "jonathan.wood@dovu.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.4",
        "nesbot/carbon": "^2.60"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^2.25",
        "spatie/ray": "^1.28",
        "symfony/var-dumper": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "Dovu\\GuardianPhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dovu\\GuardianPhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
